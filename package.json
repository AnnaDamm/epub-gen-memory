{
  "name": "epub-gen",
  "version": "0.1.0",
  "description": "A library to generate EPUB from HTML",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "node scripts/templates.js",
    "build": "tsc && tsc-alias",
    "dev": "tsc -w & tsc-alias -w",
    "run-map": "node -r source-map-support/register --unhandled-rejections=strict",
    "test": "npm run run-map -- dist/tests/alice.js && npm run run-map -- dist/tests/alice2.js",
    "clean": "rimraf dist lib/templates *.epub"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cpiber/epub-gen.git"
  },
  "keywords": [
    "epub",
    "generator",
    "ebook",
    "html",
    "epub-generator"
  ],
  "author": "cpiber",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cpiber/epub-gen/issues"
  },
  "homepage": "https://github.com/cpiber/epub-gen",
  "dependencies": {
    "diacritics": "^1.3.0",
    "ejs": "^3.1.6",
    "isomorphic-fetch": "^3.0.0",
    "jsdom": "^17.0.0",
    "jszip": "^3.7.1",
    "mime": "^2.5.2",
    "ow": "^0.27.0",
    "uslug": "^1.0.4"
  },
  "devDependencies": {
    "@types/diacritics": "^1.3.1",
    "@types/ejs": "^3.1.0",
    "@types/jsdom": "^16.2.13",
    "@types/mime": "^2.0.3",
    "@types/uslug": "^1.0.1",
    "chalk": "^4.1.2",
    "dree": "^2.8.3",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.20",
    "tsc-alias": "^1.3.9",
    "type-fest": "^2.3.4",
    "typescript": "^4.4.3"
  },
  "engines": {
    "node": ">=10.0.0"
  }
}
